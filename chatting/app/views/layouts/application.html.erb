<!DOCTYPE html>
<html>
<head>
  <title>Bloody_Mary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Nosifer' %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Fredericka+the+Great|League+Script' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class ="container">
<p class = "text-right"><h1><%= link_to "Click Me to Go Home ಠ_ಠ", root_path %></h1></p>
<%= link_to "Taipei Park Info", park_path, :class => "btn btn-info btn-md" %>
<%= link_to "About Us", aboutus_path, :class => "btn btn-info btn-md" %>
<p></p>
<% if current_user %>
<%= t(:hi, :name => current_user.display_name ) %>
<%= t("hello_world") %>
<p></p>
<%= t("admin", :scope => "foo") %>
<%= t("admin.foo") %>
<%= t("admin.bar") %>
<% end %>



<% if current_user %>
         <p class = "text-right"><%= link_to "Share Stories", new_topic_path, :class => "btn btn-info btn-sm" %> |
         <%= link_to( t(:change_password) , edit_registration_path(:user), :class => "btn btn-warning btn-sm") %> |
         <%= link_to " Edit Profile", edit_user_path(current_user), :class => "btn btn-info btn-sm" %> |
         <%= link_to( t(:logout), destroy_user_session_path, :class => "btn btn-warning btn-sm", :method => :delete) %> |
     <% else %>
         <%= link_to('註冊', new_registration_path(:user), :class => "btn btn-success btn-sm") %> |
         <%= link_to('一般使用者登入', new_session_path(:user), :class => "btn btn-warning btn-sm") %> |
         <%= link_to "登入 Facebook", user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-sm" %>

     <% end %>


     <p style="color: green"><%= flash[:notice] %></p>
     <p style="color: red"><%= flash[:alert] %></p>
      <div class="centered">
       <%= image_tag("speechless.png") %>
       </div>
<%= yield %>
    </div>
  </div>
</div>

  <%= link_to "中文版", :controller => controller_name, :action => action_name, :locale => "zh-TW" %>
  <%= link_to "English", :controller => controller_name, :action => action_name, :locale => "en" %>

</body>
</html>
