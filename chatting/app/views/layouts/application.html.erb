<!DOCTYPE html>
<html>
<head>
  <title>Chatting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class ="container">
<h1><%= link_to "孩子，該回首頁嘍 ( ´ ▽ ` )ﾉ", root_path, :class => "btn btn-primary btn-lg active" %></h1>

<%= t(:hi, :name => current_user.display_name ) %>

<%= t("hello_world") %>

<%= t("admin.foo") %>
<%= t("admin", :scope => "foo") %>

  <%= image_tag("speechless.png") %>
<p><div class="logo"></div></p>


<% if current_user %>
         <p class = "text-right"><%= link_to "心情分享", new_topic_path, :class => "btn btn-info btn-sm" %> |
         <%= link_to( t(:change_password) , edit_registration_path(:user), :class => "btn btn-warning btn-sm") %> |
         <%= link_to( t(:logout), destroy_user_session_path, :class => "btn btn-warning btn-sm", :method => :delete) %></p>


     <% else %>
         <%= link_to('註冊', new_registration_path(:user), :class => "btn btn-warning btn-sm") %> |
         <%= link_to('登入', new_session_path(:user), :class => "btn btn-warning btn-sm") %>
     <% end %>

     <p style="color: green"><%= flash[:notice] %></p>
     <p style="color: red"><%= flash[:alert] %></p>
<%= yield %>
    </div>
  </div>
</div>

  <%= link_to "中文版", :controller => controller_name, :action => action_name, :locale => "zh-TW" %>
  <%= link_to "English", :controller => controller_name, :action => action_name, :locale => "en" %>

</body>
</html>
