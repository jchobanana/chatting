<h1><%= @topic.subject %></h1>

<% like = @topic.finy_like_by(current_user) %>
<div id="like-area">
  <%= render :partial => "like", :locals => { :like => like} %>
</div>

<p></p>
<% subscription = @topic.finy_subscription_by(current_user) %>
<% if subscription %>
  <%= link_to "Unsubscribe", unsubscribe_topic_path(@topic), :method => :post, :class => "btn btn-primary btn-sm" %>
  <% else %>
  <%= link_to "Subscribe", subscribe_topic_path(@topic), :method => :post, :class => "btn btn-primary btn-sm" %>
  <% end %>

<% if @topic.image.exists? %>
  <%= link_to @topic.image.url, :target => "_blank" do %>
    <%= image_tag(@topic.image.url(:thumb)) %>
  <% end %>
<% end %>

<h2>Category: <%= @topic.category.try(:name) %></h2>

<%= simple_format @topic.content %>

<%= form_for [@topic, @comment], :remote => true do |f| %>

  <% if @comment.errors.any? %>
     <% @comment.errors.full_messages.each do |m| %>
     <p><%= m %></p>
     <% end %>
  <% end %>

  <%= link_to "修改", edit_topic_path(@topic),:class => "btn btn-info" %>
  <%= link_to "刪除", topic_path(@topic),:class => "btn btn-danger", :method => :delete, data: {confirm: "你確定要刪除此心情分享嗎？"} %>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-warning" %>
  </div>
<% end %>
<div id="count">
<%= render :partial => "comments/count", :locals => { :topic => @topic } %>
</div>
<h2>留言回覆</h2>
<ul id="comments-list">

<% @topic.comments.order("id DESC").each do |c| %>

<%= render :partial => "comments/comment", :locals => {:c => c } %>

<% end %>
</ul>









